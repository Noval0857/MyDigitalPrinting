<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pembayaran.PembayaranActivity"
    style="@style/ScreenBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#D9D9D9"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backprofil"
            android:layout_height="53dp"
            android:layout_width="20dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/kembali"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Payment Profil"
            android:textSize="16sp"
            style="@style/BoldText">
        </TextView>

    </LinearLayout>

        <FrameLayout
            android:layout_width="380dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="67dp"
            android:background="@drawable/shape_bg">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="SILAHKAN LAKUKAN PEMBAYARAN \n SESUAIKAN PEMBAYARAN DENGAN PESANAN ANDA"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:gravity="center"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/payment"
                android:layout_gravity="right"
                android:layout_marginLeft="200dp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:layout_marginTop="230dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dana"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim Bukti Pembayaran"
            android:textSize="16dp"
            android:textStyle="italic"
            android:layout_marginTop="540dp"
            android:layout_marginStart="15dp"
            style="@style/textView_style">
        </TextView>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:layout_marginTop="565dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/block_pesanan"
            android:src="@android:drawable/ic_menu_camera" />

        <Button
            android:id="@+id/kirim"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="140dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="675dp"
            android:backgroundTint="#B31312"
            android:elevation="4dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>