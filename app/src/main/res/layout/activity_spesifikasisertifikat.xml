<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".produk.spesifikasi.SpesifikasisertifikatActivity"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <!-- Untuk Jenis Spanduk -->

                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="*Nama Project" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/namaProject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/block_pesanan"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--Bagian untuk CheckBox Ukuran-->
                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Ukuran"
                    android:textSize="13sp" />

                <!--Bagian Ukuran A4-->
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/ukuranA4"
                    style="@style/BoldTextItalicText"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:text="A4" />

                <!--Bagian Ukuran F5-->
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/ukuranF5"
                    style="@style/BoldTextItalicText"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="175dp"
                    android:layout_marginTop="-35dp"
                    android:text="F5" />

                <!--Bagian untuk CheckBox Bentuk-->
                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Bentuk"
                    android:textSize="13sp" />

                <!--Bagian Bentuk Potrait-->
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/potrait"
                    style="@style/BoldTextItalicText"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:text="Potrait" />

                <!--Bagian Ukuran Landscape-->
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/landscape"
                    style="@style/BoldTextItalicText"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="175dp"
                    android:layout_marginTop="-35dp"
                    android:text="Landscape" />

                <!--Bagian untuk CheckBox Jenis Pengharga-->
                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Jenis Penghargaan"
                    android:textSize="13sp" />

                <!--Bagian Jenis undangan Sertifikat-->
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/sertifikat"
                    style="@style/BoldTextItalicText"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:text="Sertifikat" />

                <!--Bagian Jenis Undangan Piagam Penghargaan-->
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/piagam"
                    style="@style/BoldTextItalicText"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:text="Piagam penghargaan" />

                <!--Bagian Ukuran Penghargaan-->
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/penghargaan"
                    style="@style/BoldTextItalicText"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="175dp"
                    android:layout_marginTop="-75dp"
                    android:text="Penghargaan" />

                <!--Bagian Ukuran Penghargaan-->
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/costumeCheckbox"
                    style="@style/BoldTextItalicText"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="175dp"
                    android:layout_marginTop="5dp"
                    android:text="Costum" />


                <!-- Untuk Teks Lainnya -->

                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="*Costum" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/costume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/block_pesanan"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Untuk Bagian Keterangan -->
                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="*Keterangan" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="375dp"
                    android:layout_height="100dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Uploadketerangan"
                        android:layout_width="375dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/block_pesanan"
                        android:gravity="top|start"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Bagian Upload Foto -->
                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Upload Desain"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/imageDesain"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:background="@drawable/block_pesanan"
                    android:src="@android:drawable/ic_menu_camera" />

                <!-- Bagian Upload Foto -->
                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="185dp"
                    android:layout_marginTop="-120dp"
                    android:text="Upload File Nama Peserta"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/dataPeserta"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="180dp"
                    android:background="@drawable/block_pesanan"
                    android:src="@android:drawable/ic_menu_upload" />

                <!-- Button -->
                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="280dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="50dp"
                    android:text="*Desain Akan Dikirim dalam kuran waktu 24 jam"
                    android:textSize="13sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPesan"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/maron"
                    android:text="Pesan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp"
                    app:elevation="5dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>