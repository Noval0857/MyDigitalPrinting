<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".produk.spesifikasi.SpecundanganActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/nav_header1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="68dp">

            <!--Bagian untuk Nama Project-->
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Nama project"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

            <!--Bagian untuk CheckBox Ukuran-->
            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Ukuran"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <!--Bagian Ukuran A4-->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:text="A4"
                style="@style/BoldTextItalicText"/>

            <!--Bagian Ukuran F5-->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginTop="-35dp"
                android:layout_marginLeft="195dp"
                android:text="F5"
                style="@style/BoldTextItalicText"/>

            <!--Bagian untuk CheckBox Bentuk-->
            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:text="Bentuk"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <!--Bagian Bentuk Potrait-->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:text="Potrait"
                style="@style/BoldTextItalicText"/>

            <!--Bagian Ukuran Landscape-->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginTop="-35dp"
                android:layout_marginLeft="195dp"
                android:text="Landscape"
                style="@style/BoldTextItalicText"/>

            <!--Bagian untuk CheckBox Jenis Pengharga-->
            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:text="Jenis Penghargaan"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <!--Bagian Jenis undangan Sertifikat-->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:text="Sertifikat"
                style="@style/BoldTextItalicText"/>

            <!--Bagian Jenis Undangan Piagam Penghargaan-->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:text="Piagam penghargaan"
                style="@style/BoldTextItalicText"/>

            <!--Bagian Ukuran Penghargaan-->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginTop="-75dp"
                android:layout_marginLeft="195dp"
                android:text="Penghargaan"
                style="@style/BoldTextItalicText"/>

            <!--Bagian Ukuran Penghargaan-->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="195dp"
                android:text="Costum"
                style="@style/BoldTextItalicText"/>

            <!--Bagian untuk Costum-->
            <TextView
                android:layout_width="110dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:text="*Costum"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

            <!--Bagian untuk Keterangan-->
            <TextView
                android:layout_width="270dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:text="keterangan"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

            <!--Bagian Upload Desain-->
            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:text="Upload Desain*"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                android:src="@android:drawable/ic_menu_upload" />

            <!--Bagian Upload Nama Peserta-->
            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:text="Upload Nama peserta*"
                style="@style/BoldTextItalicText"/>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                android:src="@android:drawable/ic_menu_upload" />

            <!--Bagian Pembayaran-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnS1"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/maron"
                android:text="Pembayaran"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="20dp"
                app:elevation="5dp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>