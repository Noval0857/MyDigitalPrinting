<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".produk.PosterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/nav_header1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="68dp">

            <!--Bagian untuk Nama Project-->
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Nama project"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

            <!--Bagian untuk CheckBox Desain-->
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Desain"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="140dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:text="desain satu sisi"
                style="@style/BoldTextItalicText"/>
                />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="140dp"
                android:layout_height="25dp"
                android:layout_marginTop="-26dp"
                android:layout_marginLeft="190dp"
                android:text="desain dua sisi"
                style="@style/BoldTextItalicText"/>
                />

            <!--Bagian untuk CheckBox Ukuran-->
            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Ukuran Undangan"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <!--Bagian Ukuran A4-->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:text="A4"
                style="@style/BoldTextItalicText"/>

            <!--Bagian Ukuran A5-->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginTop="-35dp"
                android:layout_marginLeft="150dp"
                android:text="A5"
                style="@style/BoldTextItalicText"/>

            <!--Ukuran COSTUME-->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="-35dp"
                android:layout_marginLeft="270dp"
                android:text="Costum"
                style="@style/BoldTextItalicText"/>

            <!--Bagian untuk Jenis Undangan-->
            <TextView
                android:layout_width="110dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Jenis Undangan"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:text="*Misal Jenis Undangan Ulang tahun, Aqiqah dan Tasmiyah, dll.."
                android:textSize="9sp"
                style="@style/BoldTextItalicText"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

            <!--Bagian untuk Custom-->
            <TextView
                android:layout_width="110dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Custom"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <TextView
                android:layout_width="290dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:text="*Misal ukuran undangan : 21,6 cm x 23 cm ; Jenis kertas : Kertas Fancy Constellation Snow"
                android:textSize="9sp"
                style="@style/BoldTextItalicText"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

            <!--Bagian untuk Keterangan-->
            <TextView
                android:layout_width="270dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Tambahkan keterangan lainnya jika diperlukan"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

            <!--Bagian Upload Desain-->
            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Upload Desain*"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                android:src="@android:drawable/ic_menu_upload" />

            <!--Bagian Pembayaran-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnS1"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/maron"
                android:text="Pembayaran"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="20dp"
                app:elevation="5dp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>