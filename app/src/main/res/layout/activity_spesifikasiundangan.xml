<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".produk.spesifikasi.SpecundanganActivity"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <!-- Untuk Jenis Spanduk -->

                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="*Nama Project" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/namaProject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/block_pesanan"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--Bagian untuk CheckBox-->
                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="*Desain" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/satusisiCheckbox"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:text="desain satu sisi" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/duasisiCheckbox"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="-35dp"
                    android:text="desain dua sisi" />

                <!--Bagian untuk CheckBox Ukuran-->
                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="*Ukuran Undangan"
                    android:textSize="13sp" />

                <!--Bagian Ukuran A4-->
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/ukuranA4"
                    style="@style/BoldTextItalicText"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:text="A4" />

                <!--Bagian Ukuran A5-->
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/ukuranA5"
                    style="@style/BoldTextItalicText"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-35dp"
                    android:text="A5" />

                <!--Ukuran COSTUME-->
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/costumeCheckbox"
                    style="@style/BoldTextItalicText"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="-35dp"
                    android:text="Costum" />

                <!-- Untuk Jenis Undangan -->

                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="*Jenis Undangan" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/jenisUndangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/block_pesanan"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Untuk Costume -->

                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="*Costume" />

                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="*Misal ukuran undangan : 21,6 cm x 23 cm ; Jenis kertas : Kertas Fancy Constellation Snow"
                    android:textSize="10sp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/costum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/block_pesanan"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Untuk Bagian Keterangan -->

                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="*Tambahkan Keterangan lainnya" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="375dp"
                    android:layout_height="100dp"
                    android:hint="Keterangan"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Keteranganlainnya"
                        android:layout_width="375dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/block_pesanan"
                        android:gravity="top|start"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Bagian Upload Foto -->
                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Upload foto Utama" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@drawable/block_pesanan"
                    android:src="@android:drawable/ic_menu_camera" />

                <!-- Button -->
                <TextView
                    style="@style/BoldTextItalicText"
                    android:layout_width="280dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="*Desain Akan Dikirim dalam kuran waktu 24 jam"
                    android:textSize="13sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPesan"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/maron"
                    android:text="Pesan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp"
                    app:elevation="5dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>