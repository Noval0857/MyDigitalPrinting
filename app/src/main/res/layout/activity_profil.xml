<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScreenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profil.ProfileActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="230dp"
        android:background="@color/marron"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backprofil"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@drawable/back1" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageUser"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Username"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Username"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageUser" />

    <RelativeLayout
        android:id="@+id/Waduh"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/myprofil"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="61dp"
            android:background="@drawable/radiusprofile"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="6dp"
            android:paddingStart="10dp"
            android:text="My Profile"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changepassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myprofil"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="61dp"
            android:background="@drawable/radiusprofile"
            android:drawableStart="@drawable/gembok"
            android:drawablePadding="6dp"
            android:paddingStart="10dp"
            android:text="Change Password"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ContactUs"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changepassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="61dp"
            android:background="@drawable/radiusprofile"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:text="Contact Us"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/aboutUs"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ContactUs"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="61dp"
            android:background="@drawable/radiusprofile"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:text="About US"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12sp" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnKeluar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/radiusprofile"
        android:backgroundTint="#B31312"
        android:text="Log Out"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Waduh"
        app:layout_constraintVertical_bias="0.427" />

</androidx.constraintlayout.widget.ConstraintLayout>

