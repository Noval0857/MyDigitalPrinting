<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profil.ProfileActivity"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#B31312"
        android:orientation="vertical"
        app:cornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backprofil"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:backgroundTint="#B31312"
                app:srcCompat="@drawable/back" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:backgroundTint="#B31312"
                app:srcCompat="@drawable/setting" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="113dp"
                android:layout_height="89dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/user" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="Username"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="397dp">


        <Button
            android:id="@+id/myprofil"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#D9D9D9"
            android:text="My Profile"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12sp"
            app:cornerRadius="5dp"
            app:icon="@drawable/profil_kanan"
            app:iconGravity="end"
            app:iconSize="30dp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/changepassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="95dp"
            android:backgroundTint="#D9D9D9"
            android:text="Change Password"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12sp"
            app:cornerRadius="5dp"
            app:icon="@drawable/profil_kanan"
            app:iconGravity="end"
            app:iconSize="30dp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/paymen"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="155dp"
            android:backgroundTint="#D9D9D9"
            android:text="Payment Settings"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12sp"
            app:cornerRadius="5dp"
            app:icon="@drawable/profil_kanan"
            app:iconGravity="end"
            app:iconSize="30dp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/notification"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="215dp"
            android:backgroundTint="#D9D9D9"
            android:text="Notification"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12sp"
            app:cornerRadius="5dp"
            app:icon="@drawable/profil_kanan"
            app:iconGravity="end"
            app:iconSize="30dp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/aboutUs"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="275dp"
            android:backgroundTint="#D9D9D9"
            android:text="About US"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12sp"
            app:cornerRadius="5dp"
            app:icon="@drawable/profil_kanan"
            app:iconGravity="end"
            app:iconSize="30dp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/ContactUs"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="335dp"
            android:backgroundTint="#D9D9D9"
            android:text="Contact Us"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12sp"
            app:cornerRadius="5dp"
            app:icon="@drawable/profil_kanan"
            app:iconGravity="end"
            app:iconSize="30dp"
            app:iconTint="#000000" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="40dp"
            android:text="Log Out"
            android:textSize="20dp"
            android:backgroundTint="#B31312"
            android:textStyle="normal" />
<!--        android:fontFamily="@font/concert_one"-->
    </RelativeLayout>
</LinearLayout>

