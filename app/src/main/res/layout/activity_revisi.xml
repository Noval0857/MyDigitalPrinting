<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".produk.opsi.OpsipesananActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/nav_header1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="68dp">

            <ImageView
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/id_card" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="310dp"
                android:layout_height="58dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="-70dp"
                android:background="@drawable/opsi_sudut"
                android:text="Desain Anda"
                android:textSize="20sp"
                android:textAlignment="center"
                style="@style/BoldText"/>

            <!--Bagian untuk KETERANGAN-->
            <TextView
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Masukkan Revisi desain*"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="370dp"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

            <!--Bagian untuk Upload Foto-->
            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Upload foto Utama"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                android:src="@android:drawable/ic_menu_camera" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnS1"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/maron"
                android:text="Revisi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:elevation="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnS2"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/green"
                android:text="Download"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:elevation="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnS3"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/yellow"
                android:text="Cetak"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:elevation="5dp" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="20dp"
                android:layout_marginTop="-80dp"
                android:layout_marginLeft="30dp"
                android:text="*Revisi Diperbolehkan Sebanyak 3 Kali"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>