<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.itembrosur.ItemBrosurActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageBrosur"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_background"/>

    <EditText
        android:id="@+id/nameBrosur"
        android:hint="input nama banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/hargaBrosur"
        android:hint="input harga banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/upload"
        android:textColor="@color/white"
        android:text="upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/showP"
        android:textColor="@color/white"
        android:text="show produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>