<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".produk.spesifikasi.SpecdesainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/nav_header1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="68dp">

        <!--Bagian untuk JENIS SPANDUK-->
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Jenis Spanduk*"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/jenis_spanduk"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

        <!--Bagian untuk TEKS UTAMA-->
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Tesk Utama*"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/teks_utama"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

        <!--Bagian untuk TEKS LAINNYA-->
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Teks Lainnya*"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/teks_lainnya"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

        <!--Bagian untuk KETERANGAN-->
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Keterangan"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/keterangan"
                android:layout_width="370dp"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

        <!--Bagian untuk Upload Foto-->
            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Upload foto Utama"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                android:src="@android:drawable/ic_menu_camera" />

            <!--Bagian mengatur spesifikasi-->
            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Spesifikasi*"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/panjang"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="140dp"
                android:text="Panjang"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lebar"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/block_pesanan"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="140dp"
                android:text="Lebar"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

            <!--Bagian Teks Desain-->
            <TextView
                android:layout_width="500dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="*Desain Akan Dikirim dalam kuran waktu 24 jam"
                android:textSize="13sp"
                style="@style/BoldTextItalicText"/>

<!--            <Button-->
<!--                android:id="@+id/button"-->
<!--                android:layout_width="150dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_marginLeft="250dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:text="Pembayaran" />-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnS1"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/maron"
                android:text="Pembayaran"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="20dp"
                app:elevation="5dp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>