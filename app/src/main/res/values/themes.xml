<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyDigitalPrinting" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/marron</item>
        <item name="colorPrimaryVariant">@color/marron</item>
        <item name="colorOnPrimary">@color/marron</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/marron</item>
        <item name="colorSecondaryVariant">@color/marron</item>
        <item name="colorOnSecondary">@color/marron</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyDigitalPrinting" parent="Base.Theme.MyDigitalPrinting" />

    <!-- Digunakan untuk warna pada Bottom Navigation -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/marron</item>
    </style>

    <!-- Digunakan untuk Background pada page -->
    <style name="ScreenBackground2">
        <item name="android:background">
            @color/marron
        </item>
        <item name="android:textColor">
            @color/black
        </item>
    </style>
    <style name="ScreenBackground">
        <item name="android:background">
            @color/white
        </item>
    </style>
    <style name="CardBackground">
        <item name="android:background">
            @color/white
        </item>
        <item name="android:textColor">
            @color/black
        </item>
    </style>
    <style name="textView_style">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>